extends ../../layouts/default.pug

block main
    .d-flex.justify-content-end.mb-3
       
        a(
            href=`/${prefixAdmin}/topics/create`
            class="btn btn-success"
            ) + Thêm mới Thêm chủ đề bài hát

    //- Search and Filter Form
    .d-flex.justify-content-between.mb-3.search-form
        form.d-flex.align-items-center
            input.form-control.me-2(type="text", placeholder="Tìm kiếm bài hát...", name="search")
            button.btn.btn-primary(type="submit") Tìm kiếm

    .table-responsive
        table.table.table-striped.table-bordered
            thead.table-primary
                tr
                    th Số thứ tự
                    th Tiêu Đề
                    th Nội dung
                    th Hành động
            tbody 
                each topic, idx in topics
                    tr
                        td #{idx + 1}
                        //- td 
                        //-     img(src=song.coverImage, alt=`${song.title}`, width="100")
                        td #{topic.title}
                        td #{topic.content}     
                        td 
                            .action-container
                                span.action-toggle 
                                .action-buttons.hidden
                                    button.btn.btn-warning.edit-btn(data-bs-toggle="modal", data-bs-target="#editSongModal") Sửa
                                    button.btn.btn-danger.delete-btn(data-bs-toggle="modal", data-bs-target="#deleteSongModal") Xóa
