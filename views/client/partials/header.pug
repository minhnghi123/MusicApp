header.header
  .nav-col.left-col
    a(href="/" class="header-logo")
      i.fa.fa-headphones#header-logo(aria-hidden="true")
    a(href="/" class="header-title")
      span Spotify
      b Studio
    ul.nav-links
      li
        a(href="#") Favourites
  .nav-col.center-col
    .search-box
      i.fa.fa-search(aria-hidden="true")
      input(type="text", placeholder="Search")
      a(href="#" class="mic-icon")
        i.fa.fa-microphone(aria-hidden="true")
  .nav-col.right-col
    a(href="#" class="notif-icon")
      i.fa.fa-bell-o(aria-hidden="true")
    .user-menu
      if user && user.avatar
        img.user-img(src=user.avatar alt="User Profile")
        .dropdown-menu.hidden
          a(href="/user/profile") Profile
          a(href="/auth/logout") Logout
      else
        .auth-buttons
          a.login-button(href="/auth/login") Login
          a.signup-button(href="/auth/sign-up") Sign Up
